<% layout('layout/boilerplate') %> 
<div id='cluster-map'></div>
<h1>Campgrounds</h1><br>
<% for(let camp of campgrounds){ %> 
<div class="card mb-3">
    <div class="row">
        <div class="col-md-4">
            <%if(camp.images.length) {%>
            <img class="img-fluid"  src="<%= camp.images[0].imageurl %>" alt="">
            <% }else {%>
                <img class="img-fluid"  src="<%= camp.images[0] %>" alt="">
            <% } %>
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <div class="card-title"><%= camp.title  %></div>
                <p class="card-text"><%= camp.description  %></p>
                <p class="card-text"><%= camp.location  %></p>
                <p class="card-text">$<%= camp.price  %></p>
                <a class="btn btn-primary" href="/campgrounds/<%=camp._id%>">View Campground </a>
            </div>
        </div>
    </div>
</div>
<% } %> 
